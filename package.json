{
  "name": "backend-template",
  "version": "1.0.0",
  "description": "backend template for all projects built in node with express ",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon --exec tsx src/server/index.ts",
    "build": "tsc",
    "start": "node dist/server/index.js",
    "test": "echo \"No tests specified\" && exit 0",
    "lint": "echo \"No linting configured\" && exit 0",
    
    "db:start": "sh ./scripts/db-setup.sh start",
    "db:stop": "sh ./scripts/db-setup.sh stop",
    "db:status": "sh ./scripts/db-setup.sh status",
    "db:logs": "sh ./scripts/db-setup.sh logs",
    
    "docker:dev": "sh ./scripts/setup.sh development",
    "docker:prod": "sh ./scripts/setup.sh production",
    "docker:down": "docker compose down",
    "docker:logs": "sh ./scripts/docker-utils.sh logs",
    "docker:shell": "sh ./scripts/docker-utils.sh shell",
    "docker:cleanup": "sh ./scripts/docker-utils.sh cleanup",
    "docker:status": "sh ./scripts/docker-utils.sh status",
    "docker:health": "sh ./scripts/docker-utils.sh health"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Alikhan018/backend-template.git"
  },
  "keywords": [
    "backend",
    "template",
    "node",
    "express"
  ],
  "author": "Muhammad Ali Khan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Alikhan018/backend-template/issues"
  },
  "homepage": "https://github.com/Alikhan018/backend-template#readme",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.19.1",
    "winston": "^3.18.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.7.1",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}